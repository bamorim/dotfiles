  { "full_text" : ":${mem} " , "color" : "\#e0da37" },

  ## Disk Space
  { "full_text" : ": ${fs_used /} - [${fs_bar}]" , "color" : "\#80d9d8"},


  ## Battery Percentage
  { "full_text":": ${battery_percent BAT1}%", "color" : "\#DC322F" },

  ## Datetime
  { "full_text" : "🕑 ${time %d/%m/%Y %H:%M:%S}" , "color" : "\#95fc7b"}
],
