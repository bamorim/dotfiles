gi() { curl "https://www.gitignore.io/api/$@"; }

lsr() {
  ls -aR $1 | awk '
  /:$/&&f{s=$0;f=0}
  /:$/&&!f{sub(/:$/,"");s=$0;f=1;next}
  NF&&f{ print s"/"$0 }'
}

rmswp(){ for f in $(lsr | grep swp); do; echo "Removing $f"; rm -i $1 $f; done }

sv(){sh -c $1 > /var/transfer}
re(){cat /var/transfer}

touchp(){ mkdir -p $(dirname ${1}); touch $1 }
