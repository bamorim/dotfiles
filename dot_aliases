lsr() {
  ls -aR $1 | awk '
  /:$/&&f{s=$0;f=0}
  /:$/&&!f{sub(/:$/,"");s=$0;f=1;next}
  NF&&f{ print s"/"$0 }' | grep "[^\\.]$" --color=never
}

warn() {
  YELLOW='\033[0;33m'
  NC='\033[0m'

  echo -e "${YELLOW}Warning: ${@}${NC}"
}

icat() { kitty +kitten icat $@ }

alias task=gtask

aws-shell() {
  aws-vault exec $(aws-vault list --profiles | fzf) -- zsh
}

power-to-slab() {
  sudo chown -R 100:101 lib test priv
}

power-to-me() {
  sudo chown -R bamorim:bamorim lib test priv
}
